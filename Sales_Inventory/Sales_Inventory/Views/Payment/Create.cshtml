@model Sales_Inventory.Models.PaymentViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Payment", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Payment Detail</h3>
            </div>
            <div class="box-body">
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Payment To</label>
                        @Html.TextBoxFor(m => m.Payment_To, new { @class = "form-control required", placeholder = "Enter Payment To Name" })
                        @Html.ValidationMessageFor(m => m.Payment_To)
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Payment From</label>
                        @Html.TextBoxFor(m => m.Payment_By, new { @class = "form-control required", placeholder = "Enter Payment By Name" })
                        @Html.ValidationMessageFor(m => m.Payment_By)
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Payment Date</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            @Html.TextBoxFor(m => m.Payment_Date, "{0:dd/MM/yyyy}", new { @class = "form-control", placeholder = "Enter Date dd/mm/yyyy" })
                            @Html.ValidationMessageFor(m => m.Payment_Date)
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Payment Reason</label>
                        @Html.TextBoxFor(m => m.Payment_Against, new { @class = "form-control required", placeholder = "Enter Payment Reason" })
                        @Html.ValidationMessageFor(m => m.Payment_Against)
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Payment Method</label>
                        @Html.TextBoxFor(m => m.Payment_Type, new { @class = "form-control required", placeholder = "Enter Payment Method" })
                        @Html.ValidationMessageFor(m => m.Payment_Type)
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Account Number</label>
                        @Html.TextBoxFor(m => m.Payment_Account_No, new { @class = "form-control required", placeholder = "Enter Account Number" })
                        @Html.ValidationMessageFor(m => m.Payment_Account_No)
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Account Holder Name</label>
                        @Html.TextBoxFor(m => m.Payment_Account_Name, new { @class = "form-control required", placeholder = "Enter Holder Account Name" })
                        @Html.ValidationMessageFor(m => m.Payment_Account_Name)
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Payment Amount</label>
                        @Html.TextBoxFor(m => m.Payment_Amount, new { @class = "form-control required", placeholder = "Enter Payment Amount" })
                        @Html.ValidationMessageFor(m => m.Payment_Amount)
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Payment Bank</label>
                        @Html.TextBoxFor(m => m.Payment_Bank, new { @class = "form-control required", placeholder = "Enter Payment Bank" })
                        @Html.ValidationMessageFor(m => m.Payment_Bank)
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Bank IFSC</label>
                        @Html.TextBoxFor(m => m.IFSC_Code, new { @class = "form-control required", placeholder = "Enter Bank IFSC" })
                        @Html.ValidationMessageFor(m => m.IFSC_Code)
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Payment To Phone</label>
                        @Html.TextBoxFor(m => m.Payment_Receiver_Phone, new { @class = "form-control required", placeholder = "Enter Payment To Phone" })
                        @Html.ValidationMessageFor(m => m.Payment_Receiver_Phone)
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Payment By Phone</label>
                        @Html.TextBoxFor(m => m.Payment_Sender_Phone, new { @class = "form-control required", placeholder = "Enter Payment By Phone" })
                        @Html.ValidationMessageFor(m => m.Payment_Sender_Phone)
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Payment Balance</label>
                        @Html.TextBoxFor(m => m.Balance, new { @class = "form-control required", placeholder = "Enter Payment Balance" })
                        @Html.ValidationMessageFor(m => m.Balance)
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="@Url.Action("List", "Payment")" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </div>
}