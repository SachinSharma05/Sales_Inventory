@model Sales_Inventory.Models.AdvanceViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "AdvancePayment", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Profile Detail</h3>
            </div>
            <div class="box-body">
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Advance To</label>
                        @Html.TextBoxFor(m => m.Advance_To, new { @class = "form-control required", placeholder = "Enter Name" })
                        @Html.ValidationMessageFor(m => m.Advance_To)
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Advance Date</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            @Html.TextBoxFor(m => m.Advance_Date, "{0:dd/MM/yyyy}", new { @class = "form-control", placeholder = "Enter Date dd/mm/yyyy" })
                            @Html.ValidationMessageFor(m => m.Advance_Date)
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Advance Amount</label>
                        @Html.TextBoxFor(m => m.Advance_Amount, new { @class = "form-control required", placeholder = "Enter Amount" })
                        @Html.ValidationMessageFor(m => m.Advance_Amount)
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="form-group">
                        <label>Advance Reason</label>
                        @Html.TextBoxFor(m => m.Advance_Against, new { @class = "form-control required", placeholder = "Enter Reason" })
                        @Html.ValidationMessageFor(m => m.Advance_Against)
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="@Url.Action("List", "AdvancePayment")" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </div>
}