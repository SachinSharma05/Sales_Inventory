@model Sales_Inventory.Models.SalesViewModel

@{
    ViewBag.Title = "Sales List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Sales List</h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active">List</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header with-border">
                        <div class="form-group">
                            <div class="col-md-2">
                                <label>Create:</label>
                                <div class="input-group">
                                    <a class="btn btn-primary pull-left" href="/Sales/Create"><i data-toggle="tooltip" data-original-title="Add Type" title="Add Type" class="fa fa-plus"></i>New Sale</a>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <label>Name:</label>
                                <div class="input-group">
                                    @Html.DropDownList("SaleTo", new SelectList(Model.SaleTo, "Text", "Text"), new { @class = "form-control required", @id = "PurchaseName", type = "option" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label>Purchase Start Date:</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="startdatepicker">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label>Purchase End Date:</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="enddatepicker">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <label>Action:</label><br />
                                <input type="submit" class="btn btn-primary" value="Submit" id="btnSearch" />
                                <input type="reset" class="btn btn-warning" value="Reset" id="btnReset" />
                            </div>
                        </div>
                    </div>
                    <div id="SearchList">
                        @Html.Partial("_SearchList", Model.List)
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#Saleslist').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': false,
                'info': true,
                'autoWidth': false
            })
        })

        $('#startdatepicker').datepicker({
            autoclose: true,
            dateFormat: "dd/mm/yy"
        });

        $('#enddatepicker').datepicker({
            autoclose: true,
            dateFormat: "dd/mm/yy"
        });

        $("body").on("click", "#btnSearch", function () {
            var data = new FormData();
            data.append('PurchaseName', $("#PurchaseName").val());
            data.append('StartDate', $("#startdatepicker").val());
            data.append('EndDate', $("#enddatepicker").val());

            $.ajax({
                type: "POST",
                url: "/Sales/SearchList",
                data: data,
                processData: false,
                contentType: false,
                success: function (result) {
                    if (result) {
                        $('#SearchList').html(result);
                    }
                }
            });
        });
    </script>
}