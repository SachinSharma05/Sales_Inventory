@model Sales_Inventory.Models.EmployeeViewModel

@{ 
    ViewBag.Title = "Create Employee";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>Create Employee</h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li><a href="@Url.Action("List", "Employee")"><i class="fa fa-calendar"></i> Employee List</a></li>
            <li class="active">Create</li>
        </ol>
    </section>

    @using (Html.BeginForm("Create", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>First Name</label>
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control required", placeholder = "Enter First Name" })
                            @Html.ValidationMessageFor(m => m.FirstName)
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>Last Name</label>
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control required", placeholder = "Enter Last Name" })
                            @Html.ValidationMessageFor(m => m.LastName)
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control required", placeholder = "Enter Email" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>Gender:</label>
                            @Html.RadioButtonFor(m => m.Gender, "Male", new { @class = "minimal" })Male
                            @Html.RadioButtonFor(m => m.Gender, "Female", new { @class = "minimal" })Female
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>Date of Birth</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                @Html.TextBoxFor(m => m.DOB, "{0:dd/MM/yyyy}", new { @class = "form-control", placeholder = "Enter Birth Date dd/mm/yyyy", @id = "DOB" })
                                @Html.ValidationMessageFor(m => m.DOB)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>Blood Group</label>
                            @Html.TextBoxFor(m => m.BloodGroup, new { @class = "form-control required", placeholder = "Enter BloodGroup" })
                            @Html.ValidationMessageFor(m => m.BloodGroup, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>Address</label>
                            @Html.TextBoxFor(m => m.PermanentAddress, new { @class = "form-control required", placeholder = "Enter Address" })
                            @Html.ValidationMessageFor(m => m.PermanentAddress)
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>Postal Code</label>
                            @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", maxlength = "6", placeholder = "Enter Postal Code" })
                            @Html.ValidationMessageFor(m => m.PostalCode)
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>Phone No</label>
                            @Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control required", maxlength = "10", placeholder = "Enter Phone No." })
                            @Html.ValidationMessageFor(m => m.PhoneNo)
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>Alternate Phone No</label>
                            @Html.TextBoxFor(m => m.AlternateNumber, new { @class = "form-control required", maxlength = "10", placeholder = "Enter Alternate Phone No." })
                            @Html.ValidationMessageFor(m => m.AlternateNumber)
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>Aadhar No</label>
                            @Html.TextBoxFor(m => m.AadharNumber, new { @class = "form-control required", maxlength = "14", placeholder = "Enter Aadhar Number" })
                            @Html.ValidationMessageFor(m => m.AadharNumber)
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>Date of Joining</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                @Html.TextBoxFor(m => m.DateofJoining, "{0:dd/MM/yyyy}", new { @class = "form-control", placeholder = "Enter Joining Date dd/mm/yyyy", @id = "DOJ" })
                                @Html.ValidationMessageFor(m => m.DateofJoining)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>Account No</label>
                            @Html.TextBoxFor(m => m.AccountNo, new { @class = "form-control", placeholder = "Enter Account No" })
                            @Html.ValidationMessageFor(m => m.AccountNo)
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>Salary</label>
                            @Html.TextBoxFor(m => m.Salary, new { @class = "form-control", placeholder = "Enter Salary" })
                            @Html.ValidationMessageFor(m => m.Salary)
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label>Remark</label>
                            @Html.TextBoxFor(m => m.Remarks, new { @class = "form-control", placeholder = "Enter Remarks", @id = "Remarks" })
                            @Html.ValidationMessageFor(m => m.Remarks)
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="@Url.Action("List", "Employee")" class="btn btn-default">Cancel</a>
                </div>
            </div>
        </div>
     }
</div>

@section Scripts
{
    <script type="text/javascript">
        $('#DOB').datepicker({
            autoclose: true,
            dateFormat: "mm/dd/yy"
        });

        $('#DOJ').datepicker({
            autoclose: true,
            dateFormat: "mm/dd/yy"
        });
    </script>
}
