@model  IEnumerable<Sales_Inventory.Models.PaymentViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Payment List</h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active">List</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header with-border">
                        <div class="form-group col-md-3">
                            <a class="btn btn-primary pull-left" href="" data-toggle="modal" data-target="#ModalSelectPaymentToMake"><i data-toggle="tooltip" data-original-title="Add Type" title="Add Type" class="fa fa-plus"></i>Add Payment</a>
                        </div>
                    </div>
                    <div class="box-body">
                        <table id="Paymentlist" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <td>Purchase No</td>
                                    <th>Payment To</th>
                                    <th>Date</th>
                                    <th>Mode</th>
                                    <th>Paid Amount</th>
                                    <th>Balance</th>
                                </tr>
                            </thead>
                            <tbody id="tblbody">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Purchase_No</td>
                                        <td>@item.Payment_To</td>
                                        <td>@String.Format(@"{0:dd\/MM\/yyyy}", item.Payment_Date)</td>
                                        <td>@item.Payment_Type</td>
                                        <td>@item.Paid_Amount</td>
                                        <td>@item.Balance</td>
                                        @if (Convert.ToInt32(Session["UserId"]) == 1)
                                        {
                                            <td>
                                                <a href="/Payment/Edit/@item.Id"><span class="label label-success">Edit</span></a>
                                                <a href="/Payment/Delete/@item.Id" onclick="return confirm(' you want to delete?');"><span class="label label-danger">Delete</span></a>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#Paymentlist').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': false,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
}

<div class="modal fade bd-example-modal-lg" id="ModalSelectPaymentToMake" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLongTitle" style="text-align:center;">Balance Payment List</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="padding:40px 50px;">
                <div class="row">
                    <table id="Paymentlist" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Purchase No</th>
                                <th>Payment To</th>
                                <th>Purchase Date</th>
                                <th>Balance</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.PaymentListModel)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Purchase_No</td>
                                    <td>@item.Purchase_From</td>
                                    <td>@item.Purchase_Date</td>
                                    <td>@item.Balance</td>
                                    <td><a href="/Payment/Create/@item.Id"><span class="label label-success">Pay</span></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>