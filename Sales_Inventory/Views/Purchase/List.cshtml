@model Sales_Inventory.Models.PurchaseViewModel

@{
    ViewBag.Title = "Purchase List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Purchase List</h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active">List</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header with-border">
                        <div class="form-group">
                            <div class="col-md-2">
                                <label>Create:</label>
                                <div class="input-group">
                                    <a class="btn btn-primary pull-left" href="/Purchase/Create"><i data-toggle="tooltip" data-original-title="Add Type" title="Add Type" class="fa fa-plus"></i>New Purchase</a>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <label>Name:</label>
                                <div class="input-group">
                                    @Html.DropDownList("PurchaseName", new SelectList(Model.PurchaseName, "Text", "Text"), new { @class = "form-control required", @id = "PurchaseName", type = "option" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label>Sale Start Date:</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="startdatepicker">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label>Sale End Date:</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="enddatepicker">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <label>Action:</label><br />
                                <input type="submit" class="btn btn-primary" value="Submit" id="btnSave" />
                                <input type="reset" class="btn btn-warning" value="Reset" id="btnReset" />
                            </div>
                        </div>
                    </div>
                    <div class="box-body table-responsive">
                        <table id="PurchaseProductlist" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Purchase_No</th>
                                    <th>Purchase From</th>
                                    <th>Seller Phone</th>
                                    <th>Purchase Date</th>
                                    <th>Total Amount</th>
                                    <th>Balance Amount</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="tblbody">
                                @foreach (var item in ViewBag.PurchaseList)
                                {
                                    <tr>
                                        <td>@item.Purchase_No</td>
                                        <td>@item.Purchase_From</td>
                                        <td>@item.Purchase_From_Phone</td>
                                        <td>@String.Format(@"{0:dd\/MM\/yyyy}", item.Purchase_Date)</td>
                                        <td>@item.GrossTotal</td>
                                        <td>@item.Balance</td>
                                        @if (Convert.ToInt32(Session["UserId"]) == 1)
                                        {
                                            <td>
                                                <a href="/Purchase/Edit/@item.Id"><span class="label label-success">Edit</span></a>
                                                <a href="/Purchase/Delete/@item.Id" onclick="return confirm(' you want to delete?');"><span class="label label-danger">Delete</span></a>
                                                @if (item.Balance > 0)
                                                {
                                                    <a href="/Payment/Create/@item.Id"><span class="label label-success">Pay Amount</span></a>
                                                }
                                                else
                                                {
                                                    <a href=""><span class="label label-info">No Dues</span></a>
                                                }
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts
{
    <script type="text/javascript">
        $('#PurchaseProductlist').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': false,
            'info': true,
            'autoWidth': true
        });

        $('#startdatepicker').datepicker({
            autoclose: true,
            dateFormat: "dd/mm/yy"
        });

        $('#enddatepicker').datepicker({
            autoclose: true,
            dateFormat: "dd/mm/yy"
        });
    </script>
}