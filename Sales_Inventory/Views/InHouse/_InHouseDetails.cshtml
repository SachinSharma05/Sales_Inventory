@model Sales_Inventory.Models.InHouseViewModel

@{ 
    ViewBag.Title = "In-House Transaction List";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="box box-default">
                    <div class="box-body">
                        <div class="box-body table-responsive">
                            <table id="InHouseTransactionlist" class="table table-bordered table-striped table-responsive">
                                <thead>
                                    <tr>
                                        <th>Paid By</th>
                                        <th>Paid For</th>
                                        <th>Paid Date</th>
                                        <th>Total Amount</th>
                                        <th>Balance</th>
                                        <th>Carry Forward</th>
                                    </tr>
                                </thead>
                                <tbody id="tblbody">
                                    <tr>
                                        <td>@Model.ViewModel.PaidBy</td>
                                        <td>@Model.ViewModel.PaidFor</td>
                                        <td>@String.Format(@"{0:dd\/MM\/yyyy}", Model.ViewModel.PaidDate)</td>
                                        <td>@Model.ViewModel.PaidAmt</td>
                                        <td>@Model.ViewModel.Balance</td>
                                        <td>@Model.ViewModel.CarryForward</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="box-body table-responsive">
                            <table id="InHouseTransactionlist" class="table table-bordered table-striped table-responsive">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Transaction No</th>
                                        <th>Payment From</th>
                                        <th>Payment Date</th>
                                        <th>Payment Amount</th>
                                        <th>Transaction Type</th>
                                        <th>Payment Given To</th>
                                    </tr>
                                </thead>
                                <tbody id="tblbody">
                                    @foreach (var item in Model.VoucherModel)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.TransactionNo</td>
                                            <td>@item.PaymentFrom</td>
                                            <td>@String.Format(@"{0:dd\/MM\/yyyy}", item.PaymentDate)</td>
                                            <td>@item.PaymentAmt</td>
                                            <td>@item.TransactionType</td>
                                            <td>@item.PaymentGivenTo</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>