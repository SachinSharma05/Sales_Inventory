@model List<Sales_Inventory.Models.AdvanceViewModel>

<div class="box-body table-responsive">
    <table id="Advancelist" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Advance To</th>
                <th>Advance Date</th>
                <th>Advance Amount</th>
                <th>Advance Reason</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="tblbody">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Advance_To</td>
                    <td>@String.Format(@"{0:dd\/MM\/yyyy}", item.Advance_Date)</td>
                    <td>@item.Advance_Amount</td>
                    <td>@item.Advance_Against</td>
                    @if (Convert.ToInt32(Session["UserId"]) == 1)
                    {
                        <td>
                            <a href="/AdvancePayment/Edit/@item.Id"><span class="label label-success">Edit</span></a>
                            <a href="/AdvancePayment/Delete/@item.Id" onclick="return confirm(' you want to delete?');"><span class="label label-danger">Delete</span></a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
