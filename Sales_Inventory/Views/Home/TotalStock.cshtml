@model  IEnumerable<Sales_Inventory.Models.Purchase_Products>

@{
    ViewBag.Title = "Stock List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>List</h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active">List</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Products:</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    @Html.DropDownList("MyProducts", new SelectList(ViewBag.ProductList, "Text", "Text"), new { @class = "form-control required", @id = "ProductList", type = "option" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label>Start Date:</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="startdatepicker">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label>End Date:</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="enddatepicker">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label>Action:</label><br />
                                <input type="submit" class="btn btn-primary" value="Submit" id="btnSave" />
                                <input type="reset" class="btn btn-warning" value="Reset" id="btnReset" />
                            </div>
                        </div>
                    </div>
                    <div class="box-body table-responsive">
                        <table id="Stocklist" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Product</th>
                                    <th>Purchase Quantity</th>
                                    <th>Purchase Date</th>
                                </tr>
                            </thead>
                            <tbody id="tblbody">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.ItemName</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.CreatedDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#Stocklist').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        });

        //Date picker
        $('#startdatepicker').datepicker({
            autoclose: true,
            dateFormat: "dd/mm/yy"
        });
        $('#enddatepicker').datepicker({
            autoclose: true,
            dateFormat: "dd/mm/yy"
        })
    </script>
}

<script>
    $("body").on("click", "#btnSave", function () {
        //Loop through the Table rows and build a JSON array.
        var data = new FormData();
        data.append('StartDate', $("#startdatepicker").val());
        data.append('EndDate', $("#enddatepicker").val());
        data.append('Product', $("#ProductList").val());

        //Send the JSON array to Controller using AJAX.
        $.ajax({
            type: "POST",
            url: "/Home/TotalStock",
            data: data,
            processData: false,
            contentType: false,
            success: function (result) {

            }
        });
    });
</script>
