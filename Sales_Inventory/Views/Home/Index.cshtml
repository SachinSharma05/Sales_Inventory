@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Dashboard
        </h1>
        <ol class="breadcrumb">
            <li class="fa fa-dashboard active"> Dashboard</li>
        </ol>
    </section>

    <!--Status Board start---->
    <section class="content">
        <div class="row">
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="small-box bg-olive-active">
                    <div class="inner">
                        <h3>@TempData["EmployeeCount"]</h3>
                        <p>Employees</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-people-outline"></i>
                    </div>
                    <a href="@Url.Action("List","Employee")" class="small-box-footer">List All Employees <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="small-box bg-light-blue-active">
                    <div class="inner">
                        <h3>@TempData["PurchaseCount"]</h3>
                        <p>Purchase</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="@Url.Action("List","Purchase")" class="small-box-footer">List All Purchase <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="small-box bg-lime-active">
                    <div class="inner">
                        <h3>@TempData["SalesCount"]</h3>
                        <p>Sales</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-cart-outline"></i>
                    </div>
                    <a href="@Url.Action("List","Sales")" class="small-box-footer">List All Sales <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="clearfix visible-sm-block"></div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="small-box bg-maroon-active">
                    <div class="inner">
                        <h3>@TempData["PaymentCount"]</h3>
                        <p>Payment</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-dollar"></i>
                    </div>
                    <a href="@Url.Action("List","Payment")" class="small-box-footer">List All Payment <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="small-box bg-aqua-active">
                    <div class="inner">
                        <h3>@TempData["PaymentReceiptCount"]</h3>
                        <p>Payment Received</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="@Url.Action("List","Payment")" class="small-box-footer">List All Payments Received <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="small-box bg-yellow-active">
                    <div class="inner">
                        <h3>@TempData["AdvanceTotal"]</h3>
                        <p>Advance Payment</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-dollar"></i>
                    </div>
                    <a href="@Url.Action("List","AdvancePayment")" class="small-box-footer">List All Advance Payment <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="small-box bg-blue-active">
                    <div class="inner">
                        <h3>@TempData["MiscTotal"]</h3>
                        <p>Miscellaneous Expenses</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-dollar"></i>
                    </div>
                    <a href="@Url.Action("List","MiscExpenses")" class="small-box-footer">List All Miscellaneous Expenses <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="small-box bg-red-active">
                    <div class="inner">
                        <h3>@TempData["TotalStockCount"]</h3>
                        <p>Total Stock</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="@Url.Action("TotalStockList","Home")" class="small-box-footer">List All Current Stock <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="small-box bg-green-active">
                    <div class="inner">
                        <h3>@TempData["TotalInHouseTransaction"]</h3>
                        <p>In-House Transaction</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-user"></i>
                    </div>
                    <a href="@Url.Action("List","InHouse")" class="small-box-footer">List All InHouse Transaction <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    </section>
    <!--Status Board end---->
</div>