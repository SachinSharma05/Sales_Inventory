@model Sales_Inventory.Models.ProductTypeSelectListModel

@{
    ViewBag.Title = "Create Advance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Create Product</h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active">Create</li>
        </ol>
    </section>

    @using (Html.BeginForm("AddNewProduct", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="form-group">
                        <label>First Name</label>
                        @Html.TextBoxFor(m => m.Product, new { @class = "form-control required", placeholder = "Enter Product Name" })
                        @Html.ValidationMessageFor(m => m.Product)
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-default">Cancel</a>
                </div>
            </div>
        </div>
    }
</div> 