@model IEnumerable<Sales_Inventory.Models.SalesViewModel>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="/Content/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
<div class="col-xs-12">
    <div class="box">
        <div class="box-header with-border">
            <div class="form-group col-md-3">
                <a class="btn btn-primary pull-left" href="/Sales/Create"><i data-toggle="tooltip" data-original-title="Add Type" title="Add Type" class="fa fa-plus"></i>New Sale</a>
            </div>
        </div>
        <div class="box-body">
            <table id="Saleslist" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Sale_No</th>
                        <th>Sale_To</th>
                        <th>Sale_By</th>
                        <th>Seller Phone</th>
                        <th>Sale Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="tblbody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Sale_No</td>
                            <td>@item.Sale_To</td>
                            <td>@item.Sale_By</td>
                            <td>@item.Sale_To_Phone</td>
                            <td>@String.Format(@"{0:dd\/MM\/yyyy}", item.Sale_Date)</td>
                            <td>
                                <a href="/Sales/Edit/@item.Id"><span class="label label-success"><i class="fa fa-pencil"></i></span></a>
                                <a href="/Sales/Delete/@item.Id" onclick="return confirm(' you want to delete?');"><span class="label label-danger"><i class="fa fa-trash-o"></i></span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(function () {
        //$('#Emplist').DataTable()
        $('#Productlist').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    });
</script>

<script src="/Content/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>